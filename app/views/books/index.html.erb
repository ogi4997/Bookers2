<% if @book.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@book.errors.count, "error") %>
            prohibited this obj from saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill,100, 100, format: 'jpeg', fallback:"no_image.jpg" %>

        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(@user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
        </div>
        <h2>New book</h2>
        <%= form_for(@book) do |f| %>
        <div class="field row">
          <%=f.label :title, "Title" %></br>
          <%= f.text_field :title, class: "col-xs-12"%>
        </div>
        <div class="field row">
          <%= f.label :introduction, "Opinion" %></br>
          <%= f.text_area :body, class: "col-xs-12" %>
        </div>
        <div class="actions row">
          <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
        </div>
        <% end %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <th>
                  <%= link_to book.user do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback:"no_image.jpg",size:"50x50" %>
                    <% end %>
                    </th>
                <th><%= link_to book.title, book %></th>
                <th><%= book.body %></th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
